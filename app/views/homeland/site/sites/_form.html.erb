<div id="site" class="card">
  <div class="card-header">提交酷站</div>
  <div class="card-body">
    <%= form_for @site do |f| %>
      <%= render "/shared/error_messages", target: @site  %>

      <div class="form-group">
        <%= f.label :site_node_id %>
        <%= f.select :site_node_id, SiteNode.name_options, { include_blank: false }, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.url_field :url, placeholder: "https://", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :desc %>
        <%= f.text_area :desc, rows: 3, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.submit '提交', class: "btn btn-primary", 'data-disable-with' => '提交中...' %>
        <%= link_to '取消', sites_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
